{% extends 'base.html.twig' %}

{% block title %}Список учетных записей{% endblock %}

{% block body %}

<div class="row">
    <div class="col-lg-12">
        <div class="card">


            <div class="card-header">
                <a href="{{ path('admin_users.create') }}" class="btn btn-success">Создать учетную запись</a>
            </div>

            <div class="card-body">
                <table class="table table-responsive-sm table-bordered table-striped">
                    <thead>
                    <tr>
                        <th>{{ knp_pagination_sortable(pagination, 'Id', 'id') }}</th>
                        <th>{{ knp_pagination_sortable(pagination, 'Имя учетной записи', 'name') }}</th>
                        <th>{{ knp_pagination_sortable(pagination, 'Роли', 'roles') }}</th>
                        <th>{{ knp_pagination_sortable(pagination, 'E-mail', 'email') }}</th>
                        <th>Операции</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in pagination %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.name }}</td>
                            <td>{{ user.roles }}</td>
                            <td>{{ user.email }}</td>
                            <td><a href="{{ path('admin_users.edit', {'id': user.id}) }}" class="btn btn-sm btn-danger">Редактировать</a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

            <nav>
                {{ knp_pagination_render(pagination) }}
            </nav>
    

        </div>
    </div>
</div>


{% endblock %}
